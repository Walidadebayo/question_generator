<% if (locals.flash) { %>
    <% for (const type in locals.flash) { %>
        <% if (type === 'success') { %>
            <div id="flash-message" class="alert alert-<%- type %> col-lg-6 col-md-12 shadow-lg w-50 mx-auto fixed-top mt-5 alert-dismissible"
