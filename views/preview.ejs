<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Question Generator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
        .cont {
            width: 70%;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            margin-top: 8%;
        }
    </style>
</head>

<body>
    <!-- Ajax spinner -->
    <div id="spinner-overlay"
        style="display: none; position: fixed; z-index: 9999; top: 0; left: 0; height: 100%; width: 100%; background: rgba(0,0,0,0.5);">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>


    <div class="cont">
        <li class="menu-item" style="float: left;">
            <a href="/admin/questions" class="menu-link">
               BACK
            </a>
        </li>
        <div class="opt">
            <h4>All subject</h4>
            <% questions.forEach(question => { %>
                <hr>
                <div>
                    <h4><%= question.question %></h4>
                    <p>Subject: <%= question.subject %></p>
                    <p>Difficulty: <%= question.difficulty %></p>
                    <p>Marks: <%= question.marks %></p>
                    <p>Answer: <%= question.answer%> </p>
                    <h4>Options:</h4>
                    <ol>
                        <% question.options.forEach(option => { %>
                            <li><%= option %></li>
                        <% }); %>
                    </ol>
                </div>
                <hr />
            <% }); %>
    </div>

    </div>
</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
