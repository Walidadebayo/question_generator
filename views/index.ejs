<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Question Generator</title>
  <link rel="stylesheet" href="/assets/vendor/css/core.css" />
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>

<body>
  <!-- Ajax spinner -->
  <div id="spinner-overlay"
    style="display: none; position: fixed; z-index: 9999; top: 0; left: 0; height: 100%; width: 100%; background: rgba(0,0,0,0.5);">
    <div class="d-flex justify-content-center align-items-center h-100">
      <div class="spinner-border text-success" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>
  </div>

  <div class="cont" >
    <p id="error" class="text-danger"></p>
    <div id="subject-container">
      <h1>Question Paper Generator</h1>
      <form action="javascript:void(0)">
        <label for="subject">Select Subject:</label>
        <select id="subject" name="subject" class="rounded">
          <option value="">select subject</option>
          <% const uniqueSubjects=[...new Set(subjects)]; %>
            <% uniqueSubjects.forEach(subject=> { %>
              <option value="<%= subject %>">
                <%= subject %>
              </option>
              <% }); %>
        </select>

        <label for="topic">Select Topic:</label>
        <select name="topic" id="topic" class="rounded">
          
        </select>
        

        <button id="submit" type="submit" onclick="$('#subj').text($('#subject').val())">Generate Questions</button>
      </form>
    </div>
    <div class="row">
      <div class="card col-md-12" id="questions-container" style="display: none;">
        <div class="card-header">
          <h3 id="subj"></h3>
          <h5>Question <span id="question-number"></span></h5>
        </div>
        <div class="card-body">
          <h5 class="card-title" id="questions"></h5>
          <img src="" alt="image" id="image" style="display: none; width: 200px; height: 200px;" class="mb-5 img-fluid">
          <div class="radiobtn">
            <input type="radio" id="option1" name="answer"  required />
            <label for="option1" class="text-wrap">Option 1</label>
          </div>
  
          <div class="radiobtn">
            <input type="radio" id="option2" name="answer"  required />
            <label for="option2" class="text-wrap">Option 2</label>
          </div>
  
          <div class="radiobtn">
            <input type="radio" id="option3" name="answer"   required/>
            <label for="option3" class="text-wrap">Option 3</label>
          </div>
          <div class="radiobtn">
            <input type="radio" id="option4" name="answer"   required/>
            <label for="option4" class="text-wrap">Option 4</label>
          </div>
          
          
          <!-- Navigation Buttons -->
          <div class="mt-3">
            <button type="button" class="btn btn-success ml-2" onclick="checkAnswer()">Submit</button>
  
          </div>
  
          <!-- Score -->
        </div>
      </div>

    </div>
    <div class="row">
      <div id="result-container" class="col-md-12" style="display: none;">
        <div class="mt-3">
          <h4>Score: <b id="score"></b></h4>
        </div>
  
        <!-- Answers -->
  
        <div class="mt-5">
          <div id="answers" class="">
          </div>
  
          <div class="mt-3">
            <button type="button" class="btn btn-success ml-2" id="restart" >Restart</button>
          </div>
  
        </div>
      </div>

    </div>
  </div>
</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="/js/main.js"></script>